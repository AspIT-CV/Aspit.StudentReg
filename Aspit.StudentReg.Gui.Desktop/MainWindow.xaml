<Window x:Class="Aspit.StudentReg.Gui.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aspit.StudentReg.Gui.Desktop"
        mc:Ignorable="d"
        Title="Elever og tidsregistrering"
        Height="900"
        WindowState="Maximized"
        Width="1600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <GroupBox Grid.Column="0" Header="Elever" Margin="5" >
      <DataGrid Margin="5" />
    </GroupBox>
    <local:AttendanceRegistrationViewer Grid.Column="1"/>
  </Grid>
</Window>
