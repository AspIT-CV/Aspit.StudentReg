<UserControl x:Class="Aspit.StudentReg.Gui.Desktop.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Aspit.StudentReg.Gui.Desktop"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Border BorderBrush="Black" BorderThickness="0.1" Margin="5">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="40"/>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="50" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="60" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Label Content="Time:" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
      <TextBox Grid.Column="1" HorizontalContentAlignment="Center" Margin="5" MaxLength="2" VerticalContentAlignment="Center" x:Name="HoursTextBox" TextChanged="HoursTextBox_Changed" />
      <Label Content="Minut:" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" />
      <TextBox Grid.Column="3" HorizontalContentAlignment="Center" Margin="5" MaxLength="2" VerticalContentAlignment="Center" x:Name="MinutesTextBox"
               TextChanged="MinutesTextBox_Changed" />
      <Label Grid.Column="4" Content="Sekund:" HorizontalAlignment="Right" VerticalAlignment="Center" />
      <TextBox Grid.Column="5" HorizontalContentAlignment="Center" Margin="5" MaxLength="2" VerticalContentAlignment="Center" x:Name="SecondsTextBox"
               TextChanged="SecondsTextBox_Changed" />
    </Grid>
  </Border>
</UserControl>
